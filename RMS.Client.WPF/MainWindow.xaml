<Window x:Class="RMS.Client.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RMS.Client.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="System Zarządzania Zasobami" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Użytkownik:"/>
            <TextBox x:Name="txtUsername" Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Hasło:"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,15" Padding="5"/>

            <Button Content="Zaloguj się" Click="btnLogin_Click" Height="35" Background="#2196F3" Foreground="White" FontWeight="Bold"/>

            <TextBlock x:Name="lblStatus" Foreground="Red" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
